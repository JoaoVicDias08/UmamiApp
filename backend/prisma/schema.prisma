generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db "
}

model Usuario {
  id  Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  pedidos Pedido[]
}

model Produto {
  id Int @id @default(autoincrement())
  nome String
  preco Float
  imagem String
  categoria String
}

model Pedido {
  ind Int @id @default(autoincrement())
  usuarioId Int
  produtos String //JSON com os produtos
  total Float
  Usuario Usuario @relation(fields: [usuarioId], references: [id])
}